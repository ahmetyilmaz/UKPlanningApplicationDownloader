{
  "manifest_version": 3,
  "name": "UK Planning Application Downloader",
  "description": "Instantly bulk-download all documents and assets from UK local council planning applications with a single click.",
  "version": "0.1",
  "icons": {
    "16": "icons/construction-16x16.png",
    "19": "icons/construction-16x16.png",
    "32": "icons/construction-48x48.png",
    "38": "icons/construction-48x48.png",
    "48": "icons/construction-48x48.png",
    "64": "icons/construction-48x48.png",
    "96": "icons/construction-128x128.png",
    "128": "icons/construction-128x128.png",
    "256": "icons/construction-512x512.png",
    "512": "icons/construction-512x512.png"
  },
  "permissions": [
    "downloads"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.gov.uk/*",
        "*://planningregister.planningsystemni.gov.uk/*",
        "*://api-planningregister-planningportal.pr.tqinfra.co.uk/*",
        "*://documentstore.tqinfra.co.uk/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}